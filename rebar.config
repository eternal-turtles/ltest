{eunit_opts, [verbose]}.
{eunit_compile_opts, [
    {src_dirs, ["src", "test"]}
  ]}.

{deps, [
   {color, {git, "https://github.com/julianduque/erlang-color.git", {tag, "v1.0.0"}}}
  ]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.

%%{project_plugins, [
%%   {lodox, {git, "https://github.com/lfe-rebar3/lodox.git", {tag, "0.12.14"}}}
%%  ]}.

{profiles, [
   %% Alternatively, you can use the Gitlab mirror with the following:
   %% $ rebar3 as gitlab compile
   {gitlab, [
    {plugins, [
         {rebar3_lfe, {git, "https://github.com/lfe-rebar3/rebar3_lfe.git", {branch, "release/0.3.x"}}}
      ]}
    ]},
   %% Or use Hex.pm instead with:
   %% $ rebar3 as hexpm compile
   {hexpm, [
     {deps, [
        {lutil, "0.10.0-rc6"},
        {erlang_color, "1.0.0"}
      ]},
     {erl_opts, [{src_dirs, ["src", "test"]}
      ]}
    ]},
   {dev,
     [{deps, [
        {lfe, {git, "https://github.com/lfe/lfe.git", {branch, "bleeding-edge"}}}
      ]}
     {plugins, [
        {rebar3_lfe, {git, "https://github.com/lfe-rebar3/rebar3_lfe.git", {branch, "release/0.3.x"}}}
      ]}
     ]},
   {test, [
     {plugins, [
       {rebar3_lfe, {git, "https://github.com/lfe-rebar3/rebar3_lfe.git", {branch, "release/0.3.x"}}}]},
     {eunit_opts, [verbose]},
     {erl_opts, [{src_dirs, ["src", "test"]}
      ]}
    ]}
  ]}.
